{
  "name": "vscode-run-single-test",
  "displayName": "Run Single Test",
  "description": "Run individual Angular/Jasmine/Karma tests with a click",
  "version": "1.0.0",
  "publisher": "mahdihajian",
  "repository": {
    "type": "git",
    "url": "https://github.com/mahdi-hajian/vscode-run-single-test.git"
  },
  "bugs": {
    "url": "https://github.com/mahdi-hajian/vscode-run-single-test/issues"
  },
  "homepage": "https://github.com/mahdi-hajian/vscode-run-single-test#readme",
  "license": "MIT",
  "keywords": [
    "angular",
    "jasmine",
    "karma",
    "test",
    "testing",
    "unit-test",
    "ng-test",
    "angular-test",
    "jasmine-test",
    "karma-test",
    "run-test",
    "single-test",
    "test-runner"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Testing"
  ],
  "activationEvents": [
    "onCommand:runSingleTest.runTestFromExplorer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "runSingleTest.runTestFromExplorer",
        "title": "Run Test",
        "icon": "$(play)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "runSingleTest.runTestFromExplorer",
          "when": "resourceExtname =~ /\\.(spec|test)\\.(ts|js)$/",
          "group": "runSingleTest"
        }
      ]
    },
    "configuration": {
      "title": "Run Single Test",
      "properties": {
        "runSingleTest.usePackageJsonScript": {
          "type": "boolean",
          "default": false,
          "description": "Use npm script from package.json instead of direct command"
        },
        "runSingleTest.packageJsonScript": {
          "type": "string",
          "default": "test",
          "description": "Name of the script in package.json to run (e.g., 'test', 'test:single')"
        },
        "runSingleTest.ngTestCommand": {
          "type": "string",
          "default": "node --max_old_space_size=15360 node_modules/@angular/cli/bin/ng test",
          "description": "Full command to run ng test (used when usePackageJsonScript is false)"
        },
        "runSingleTest.autoDetectLibraryName": {
          "type": "boolean",
          "default": false,
          "description": "Automatically detect library name from the first folder in the test file path (e.g., 'termeh-patterns' from 'termeh-patterns/src/lib/search/trp-search.component.spec.ts')"
        },
        "runSingleTest.libraryName": {
          "type": "string",
          "default": "",
          "description": "Library/project name for ng test (e.g., 'bdmp'). Used only if autoDetectLibraryName is false"
        },
        "runSingleTest.ngTestArgs": {
          "type": "string",
          "default": "--configuration=withConfig --browsers=ChromeDebug",
          "description": "Additional arguments for ng test (e.g., '--configuration=withConfig --browsers=ChromeDebug')"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "^18.0.0",
    "typescript": "^4.9.0"
  }
}

