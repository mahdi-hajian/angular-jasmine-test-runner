{
  "name": "vscode-run-single-test",
  "displayName": "Run Single Test",
  "description": "Run individual Angular/Jasmine/Karma tests with a click",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Testing"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:javascript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "runSingleTest.runTest",
        "title": "Run Test"
      }
    ],
    "configuration": {
      "title": "Run Single Test",
      "properties": {
        "runSingleTest.karmaConfigPath": {
          "type": "string",
          "default": "karma.conf.js",
          "description": "Path to karma configuration file relative to workspace root"
        },
        "runSingleTest.karmaCommand": {
          "type": "string",
          "default": "npm test",
          "description": "Command to run karma (e.g., 'npm test', 'npx karma', './node_modules/.bin/karma')"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "^18.0.0",
    "typescript": "^4.9.0"
  }
}

